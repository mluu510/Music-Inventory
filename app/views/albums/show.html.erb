<h1>Album Title: <%= @album.title %></h1>
<h2>By: <%= @band.name %></h2>

<h3>Tracks:</h3>
<ul>
	<% @tracks.each do |track| %>
		<li><%= link_to track.title, track_url(track) %></li>
	<% end %>
</ul>

<%= link_to "Add a track", new_band_album_track_url(@band.id, @album.id)%>
<br>
<%= button_to "Delete this album", album_url(@album), :method => :delete %>
<br>
<%= link_to "Back", band_url(@band) %>